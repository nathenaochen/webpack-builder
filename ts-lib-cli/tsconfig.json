{
  "compilerOptions": {
    "target": "es5",                          /* Specify ECMAScript target version: 'ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', 'ES2018', 'ES2019', 'ES2020', or 'ESNEXT'. */
    "module": "ESNEXT",                          /* Specify JSX code generation: 'preserve', 'react-native', or 'react'. */
    "declaration": true,                   /* Generates corresponding '.d.ts' file. */
    "declarationDir": "dist/types",                  /* Concatenate and emit output to single file. */
    // "outDir": "dist/lib",                         /* Transpile each file as a separate module (similar to 'ts.transpileModule'). */
    // "noEmit": true,
    "strict": true, 
    "moduleResolution": "node",             
    "esModuleInterop": true,              
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,
  },
  "include": ["src","rollup.config.js"]
}
